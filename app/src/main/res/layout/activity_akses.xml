<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AksesActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lyt1"
        android:layout_width="match_parent"
        android:layout_height="999dp"
        android:layout_alignParentTop="true"
        android:background="#045693">

    <TextView
        android:id="@+id/tvjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F O R M B I N D I N G"
        android:layout_marginTop="@dimen/_120sdp"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/btnBinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binding"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_below="@+id/btnsubmit2"
            android:layout_marginLeft="@dimen/_10ssp"
            />
    </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/diamond"
            app:backgroundTint="@color/white"/>
        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_599sdp"
            android:background="@drawable/diamond"
            app:backgroundTint="@color/white"/>
    </RelativeLayout>
        </ScrollView>
</RelativeLayout>